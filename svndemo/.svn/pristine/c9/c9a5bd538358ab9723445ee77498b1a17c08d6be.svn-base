*{margin: 0;padding: 0;}
ul,li{list-style: none;}
a{cursor: pointer;color: #337ab7;text-decoration: none;}
a:focus, a:hover {
    color: #23527c;
    text-decoration: underline;
}
table {
    border-collapse: collapse;
    border-spacing: 0;
}
body{font-size: 14px;}
.menu{width: 900px;margin: 40px auto 0;background: #f8f8f8;padding: 10px;overflow: hidden;}
.menu a{float: right;background: #006dcc;border: 1px solid #2e6da4;padding: 2px 10px;color: #fff;border-radius: 3px;}
.menu input{border: 1px solid #e0e0e0;padding: 2px 10px;line-height: 20px;font-size: 14px;}
.menu button{border: 1px solid #2e6da4;padding: 1px 10px;line-height: 20px;margin-left: 10px;background: #006dcc;color: #fff;font-size: 14px;}
.page{width: 900px;margin: 0px auto 0;text-align: right;}
.list{width: 900px;margin: 15px auto 0;}
.list table{width: 100%;}
.list td,.list th{border: 1px solid #ddd;padding: 6px 10px;}
.list td a{display: inline-block;margin-left: 10px;}
.list th{background: #f0f0f0;}
.list tr:hover{background: #f8f8f8;}
.pagination{height: auto;overflow: hidden;padding: 15px 0;padding-left: 1px;display: inline-block;}
.pagination  li {
	float: left;
}
.pagination  li a{padding:4px 12px ;line-height: 20px;border: 1px solid #ddd;display: inline-block;margin-left: -1px;}
.pagination a:hover{background: #f8f8f8;}
.shadow{display: none;position: fixed;z-index: 1;width: 100%;height: 100%;background: rgba(0,0,0,0.5);top: 0;left: 0;}
.dialog{display: none;width: 600px;position: absolute;z-index: 9;top: 20%;background: #fff;left: 50%;box-shadow: 0 1px 3px #000;margin-left: -300px;}
.dialog_header{line-height: 34px;overflow: hidden;border-bottom: 1px solid #e0e0e0;padding: 0 10px;font-weight: bold;height: 34px;overflow: hidden;}
.dialog_header a{float: right;color: #aaa;font-size:24px;}
.dialog_header a:hover{text-decoration: none;color: #f00;}
.dialog_footer{border-top: 1px solid #e0e0e0;background: #f5f5f5;text-align: right;padding: 10px 0;}
.dialog_footer a{display: inline-block;margin-right: 10px;padding: 5px 15px;border: 1px solid #ddd;border-radius: 2px;}
.dialog_footer a:hover{text-decoration: none;}
.dialog_footer a.save_btn{background: #006dcc;border: 1px solid #2e6da4;color: #fff;}
.dialog table td{padding: 5px 10px;}
.dialog table input{border: 1px solid #e0e0e0;padding: 4px 10px;line-height: 20px;}
.dialog table{width: 80%;margin: 10px auto;}